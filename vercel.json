{
  "version": 2,
  "builds": [
    { 
      "src": "server/index.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["client/dist/**", "dist/**"]
      }
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/index.ts" },
    { "src": "/(.*)", "dest": "dist/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}