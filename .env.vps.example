# VPS MongoDB Configuration
# Copy this to .env on your VPS and update with your MongoDB credentials

# Force MongoDB usage (required for VPS)
FORCE_MONGODB=true

# MongoDB Connection (update with your credentials)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/jellyfin_signup

# Jellyfin Configuration  
JELLYFIN_SERVER_URL=https://freemiuminfo.eu.org
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# TMDB API for background content
TMDB_API_KEY=your_tmdb_api_key_here

# Production settings
NODE_ENV=production
SESSION_SECRET=your-secure-session-secret-here